<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/edit_text_background"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:foreground="@drawable/uni_background"
                android:id="@+id/lay_category_iamge_id"
                android:background="@color/back"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="115dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="1dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:maxLines="5"
            android:id="@+id/lay_category_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bangladesh"
            android:textColor="#E19F02"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2.5"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:id="@+id/book_category_update_ids"
        android:textColor="@color/white"
        android:backgroundTint="#57C905"
        android:background="@drawable/sub_back"
        android:textSize="14dp"
        android:foreground="@drawable/rip"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Update"
        android:padding="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>