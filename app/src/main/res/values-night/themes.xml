<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <color name="colorSelected">#75DD04</color> <!-- Red for selected -->
    <color name="colorUnselected">#FFFFFF</color> <!-- White for unselected -->

    <style name="Base.Theme.EducationalBooks" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/blackwhite</item>
        <item name="colorSurface">@color/black</item>

    </style>

    <style name="MyToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/sans_med</item>

    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>



    <style name="CornerCut">
        <item name="cornerSize">3.5%</item>
    </style>
    <style name="CornerCut1">
        <item name="cornerSize">3.5%</item>

    </style>
    <style name="AdsCut">
        <item name="cornerSize">3.5%</item>

    </style>

    <style name="CustomMenuTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:fontFamily">@font/sans_med</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/sans_med</item>
        <item name="android:textAllCaps">false</item>
    </style>






</resources>

