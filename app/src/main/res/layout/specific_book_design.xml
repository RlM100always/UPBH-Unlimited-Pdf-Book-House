<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="7dp"
    android:foreground="@drawable/fore_back"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/specific_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:padding="1.5dp"
                android:background="@drawable/loading"
                android:id="@+id/book_image_id"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:scaleType="fitXY"
                android:src="@drawable/loading"
                app:shapeAppearanceOverlay="@style/CornerCut"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:id="@+id/book_category_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Programming"
                android:textColor="#FF33A3"
                android:textSize="17dp"
                />


            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:id="@+id/book_status_id"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="18dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:background="@drawable/edit_text_background"
                android:textStyle="bold"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="@color/c1"
                android:textSize="12dp"
                />
            <TextView
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/baseline_menu_book_24"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:maxLines="3"
                android:id="@+id/book_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bangladesh Name of a Country .Where it is located"
                android:textColor="?attr/colorSecondary"
                android:textSize="13dp"
                />


            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/book_pageno_id"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:background="@drawable/edit_text_background"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 Page"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="11dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/book_mb_id"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"                android:background="@drawable/edit_text_background"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 Mb"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="11dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/book_type_id"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"                    android:background="@drawable/edit_text_background"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="11dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/book_language_id"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"                    android:background="@drawable/edit_text_background"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="11dp"
                    />


            </LinearLayout>







        </LinearLayout>




    </LinearLayout>

</LinearLayout>