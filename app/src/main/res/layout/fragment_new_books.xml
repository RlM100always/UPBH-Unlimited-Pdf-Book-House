<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".fragmentactivity.NewBooksFragment">

    <androidx.appcompat.widget.SearchView
        android:layout_marginTop="5dp"
        android:id="@+id/book_categoyr_searhc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/searchbar_background"
        android:elevation="5dp"
        app:iconifiedByDefault="false"
        app:queryHint="Search new book"
        tools:ignore="MissingConstraints" />

    <LinearLayout

        android:id="@+id/no_new_book"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/nothing"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No New Books Available Current Moments"
            android:textColor="?attr/colorSecondary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <ProgressBar

        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:id="@+id/progressBar_new_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_marginTop="6dp"
        android:id="@+id/swipe_refresh_layout_new_books"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="80dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_books_recyclerview_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
