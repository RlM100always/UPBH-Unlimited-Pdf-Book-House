<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="6dp"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="100dp"
    android:elevation="5dp"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/freeads"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/MyToolbarTitleText"
            android:textColor="@color/threeitembackcolor"
            android:textSize="25dp"
            android:text="Video Help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center"
            android:background="@color/threeitembackcolor"
            android:layout_width="130dp"
            android:layout_height="2dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="16dp"
                android:text="Do You Want ADS Free Experience?? \nFor Removing Ads !!!
        \n\nPaste A Kupon Code bellow : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:textColorHint="#676565"
                android:textColor="?attr/colorSecondary"
                android:paddingLeft="11dp"
                android:hint="paste cupon code"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/edit_text_background"
                android:maxLines="100"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="italic"
                android:layout_margin="10dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="14dp"
                android:text="Defult cuon code : 12345 .If you use default cupon code ,you dont get bonous point ."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="30dp"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2.5"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/c1"
                    android:background="@drawable/edit_text_background"
                    android:textSize="16dp"
                    android:foreground="@drawable/fore_back"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="Submit"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2.5"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/c4"
                    android:background="@drawable/edit_text_background"
                    android:textSize="16dp"
                    android:foreground="@drawable/fore_back"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="Cancel"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                style="@style/MyToolbarTitleText"
                android:textColor="#F4511E"
                android:textSize="23dp"
                android:text="Share 100 Friends and Enjoy Life Time Ads Free Experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="16dp"
                android:text="Total Share : 100 \nYour Cupon Code : 12@525%%%## \n\nNow Share this app 100 friends and use them your cupon code .When 100 peole use your cupon code .ADS will Automatically of for Lifetime."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="30dp"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2.5"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/c1"
                    android:background="@drawable/edit_text_background"
                    android:textSize="16dp"
                    android:foreground="@drawable/fore_back"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="Copy"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2.5"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/threeitembackcolor"
                    android:background="@drawable/edit_text_background"
                    android:textSize="16dp"
                    android:foreground="@drawable/fore_back"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="Share"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>










</ScrollView>