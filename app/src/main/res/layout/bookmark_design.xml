<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:foreground="@drawable/fore_back"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    app:strokeColor="#827D7D"
                    app:strokeWidth="0.3dp"
                    android:background="@drawable/loading"
                    android:id="@+id/book_image_id"
                    android:layout_width="wrap_content"
                    android:layout_height="175dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/loading"
                    app:shapeAppearanceOverlay="@style/CornerCut"/>
                <ImageView
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/delete_id"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/white"
                    android:foreground="@drawable/fore_back"
                    android:scaleType="center"
                    android:src="@drawable/baseline_delete_24" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="3.5dp"
                android:maxLines="1"
                android:id="@+id/book_category_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programming"
                android:textColor="#FF33A3"
                android:textSize="17dp"
                />

            <LinearLayout
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/bookmark_page_id"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:background="@drawable/edit_text_background"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 Page"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="11dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/bookmark_mb_id"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:background="@drawable/edit_text_background"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 Mb"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="11dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView

                    android:visibility="gone"
                    android:id="@+id/bookmark_type_id"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:background="@drawable/edit_text_background"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="11dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/bookmark_language_id"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:background="@drawable/edit_text_background"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="11dp"
                    />


            </LinearLayout>



            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="3.5dp"
                android:maxLines="4"
                android:id="@+id/book_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangladesh Name of a Country .Where it is located"
                android:textColor="?attr/colorSecondary"
                android:textSize="14dp"
                />





        </LinearLayout>




    </LinearLayout>

</LinearLayout>