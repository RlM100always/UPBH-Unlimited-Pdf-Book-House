<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/back_color1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:fontFamily="@font/bold_sans"
        android:foreground="@drawable/fore_back"
        android:textColor="@color/icon_color"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Select"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:fontFamily="@font/sans_med"
        android:foreground="@drawable/fore_back"
        android:id="@+id/online_id"
        android:textColor="@color/icon_color"
        android:textSize="20dp"
        android:background="@drawable/specific_back"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Online"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:fontFamily="@font/sans_med"
        android:id="@+id/offline_id"
        android:textColor="@color/icon_color"
        android:textSize="20dp"
        android:background="@drawable/specific_back"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Offline"
        android:foreground="@drawable/fore_back"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>